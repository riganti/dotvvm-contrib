@viewModel DotVVM.Contrib.Samples.ViewModels.Sample1ViewModel, DotVVM.Contrib.Samples
@masterPage Views/_master.dotmaster

<dot:Content ContentPlaceHolderID="MainContent">

    <div style="width:300px">
        <dot:TextBox class="form-control" Text="{value: Color}" />
    </div>

    <div style="width:300px">
        <dc:BootstrapColorpicker Color="{value: Color}" />
    </div>

    <div>
        <dot:Button Text="Change Color" Click="{command: SetColor()}" />
    </div>

</dot:Content>

